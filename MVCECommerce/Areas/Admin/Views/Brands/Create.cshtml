@model MVCECommerce.Domain.Brand
@{
    ViewData["Title"] = "Marka Ekle";
}

<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label class="form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" placeholder="marka adını yazınız..." />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <div class="custom-file">
            <input type="file" class="custom-file-input" asp-for="LogoFile">
            <label class="custom-file-label" asp-for="LogoFile">Dosya Seçiniz</label>
        </div>
    </div>
    <div class="mb-3">
        <div class="form-check">
            <input class="form-check-input" asp-for="IsEnabled" />
            <label class="form-check-label" asp-for="IsEnabled"></label>
        </div>
    </div>
    <div class="d-flex">
        <a class="btn btn-link" asp-action="Index">İptal</a>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" /> //
}