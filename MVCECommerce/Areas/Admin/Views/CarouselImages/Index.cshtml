@model IEnumerable<CarouselImageDto>
@{
    ViewData["Title"] = "Sliders";
}
<div class="p-3 d-flex justify-content-end">
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa fa-plus" aria-hidden="true"></i>
        Yeni
    </a>
</div>
<div class="row row-cols-1 row-cols-md-3 g-3 ">
    @foreach (var item in Model)
    {
        <div class="col p-2">
            <div class="card">
                <div class="card-body d-flex flex-column gap-2">
                    <img src="@Url.Action("CarouselImage","Images", new { area= string.Empty, id =item.Id })" />
                    <br />
                    <a href="@item.Url" target="_blank" class="text-truncate">@item.Url</a>
                    <br />
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                    <br />
                    <a class="btn btn-danger remove-btn" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </div>
            </div>
        </div>
    }
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(() => {
            $('.remove-btn').on('click', (e) => {
                Swal.fire({
                    icon: 'warning',
                    title: 'Uyarı!',
                    html: 'Bu kayıt tamamen silinecektir. Devam etmek istiyor musunuz?',
                    showCancelButton: true,
                    cancelButtonText: 'İptal',
                    confirmButtonText: 'Sil',
                })
                    .then((result) => {
                        if (result.isConfirmed)
                            window.location = $(e.currentTarget).attr('href');
                    });
                return false;
            });
        });
    </script>
}