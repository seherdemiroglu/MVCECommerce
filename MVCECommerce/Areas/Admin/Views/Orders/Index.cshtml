@model IEnumerable<Order>
@{

}

<table class="table table-bordered table-striped">
    <colgroup>
        <col />
        <col />
        <col />
        <col />
        <col width="200" />
    </colgroup>
    <thead>
        <tr>
            <th>
                Tarih
            </th>
            <th>
                Kullanıcı Adı
            </th>
            <th>
                Kullanıcı EPosta
            </th>
            <th>
                Tutar
            </th>
            <th>
                <div class="d-flex align-items-center">
                    İşlemler
                </div>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>
                    @order.Date.ToShortDateString()
                </td>
                <td>
                    @order.User!.GivenName
                </td>
                <td>
                    <a href="mailto:@order.User.Email">@order.User.Email</a>
                </td>
                <td class="text-right text-monospace">@order.GrandTotal.ToString("n2")</td>
                <td>
                    <div class="d-flex justify-content-center">
                        <a asp-action="Detail" asp-route-id="@order.Id" class="btn btn-primary">
                            <i class="bi bi-search"></i>
                            İncele
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(() => {
            $('.remove-btn').on('click', (e) => {
                Swal.fire({
                    icon: 'warning',
                    title: 'Uyarı!',
                    html: 'Bu kayıt tamamen silinecektir. Devam etmek istiyor musunuz?',
                    showCancelButton: true,
                    cancelButtonText: 'İptal',
                    confirmButtonText: 'Sil',
                })
                    .then((result) => {
                        if (result.isConfirmed)
                            window.location = $(e.currentTarget).attr('href');
                    });
                return false;
            });
        });
    </script>
}